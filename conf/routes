# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                                        controllers.RegisterToVoteController.index
GET         /register-to-vote                        controllers.RegisterToVoteController.registerToVote
GET         /register-to-vote/                       controllers.RegisterToVoteController.registerToVote
GET         /register-to-vote/complete               controllers.RegisterToVoteController.complete
GET         /register-to-vote/complete/fake          controllers.RegisterToVoteController.fakeComplete
GET         /register-to-vote/confirmation           controllers.RegisterToVoteController.confirmApplication
POST        /register-to-vote/confirmation           controllers.RegisterToVoteController.submitApplication
GET         /register-to-vote/error                  controllers.RegisterToVoteController.error
GET         /register-to-vote/error/:error           controllers.RegisterToVoteController.errorRedirect(error: String)


##Steps routes

#Open Register Step
GET         /register-to-vote/open-register          controllers.step.OpenRegisterController.get
POST        /register-to-vote/open-register          controllers.step.OpenRegisterController.post
GET         /register-to-vote/edit/open-register     controllers.step.OpenRegisterController.editGet
POST        /register-to-vote/edit/open-register     controllers.step.OpenRegisterController.editPost

#Other Address Step
GET         /register-to-vote/other-address          controllers.step.OtherAddressController.get
POST        /register-to-vote/other-address          controllers.step.OtherAddressController.post
GET         /register-to-vote/edit/other-address     controllers.step.OtherAddressController.editGet
POST        /register-to-vote/edit/other-address     controllers.step.OtherAddressController.editPost

#Nationality Step
GET         /register-to-vote/nationality            controllers.step.NationalityController.get
POST        /register-to-vote/nationality            controllers.step.NationalityController.post
GET         /register-to-vote/edit/nationality       controllers.step.NationalityController.editGet
POST        /register-to-vote/edit/nationality       controllers.step.NationalityController.editPost

#Address Step
GET         /register-to-vote/address                controllers.step.AddressController.get
POST        /register-to-vote/address                controllers.step.AddressController.post
GET         /register-to-vote/edit/address           controllers.step.AddressController.editGet
POST        /register-to-vote/edit/address           controllers.step.AddressController.editPost

#Previous Address Step
