# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                                     controllers.RegisterToVoteController.index
GET         /register-to-vote                     controllers.RegisterToVoteController.registerToVote
GET         /register-to-vote/                    controllers.RegisterToVoteController.registerToVote
GET         /register-to-vote/complete            controllers.RegisterToVoteController.complete
GET         /register-to-vote/confirmation        controllers.RegisterToVoteController.confirmApplication
POST        /register-to-vote/confirmation        controllers.RegisterToVoteController.submitApplication
GET         /register-to-vote/error               controllers.RegisterToVoteController.error
GET         /register-to-vote/error/:error        controllers.RegisterToVoteController.errorRedirect(error: String)
GET         /register-to-vote/:step               controllers.RegisterToVoteController.registerStep(step: String)
POST        /register-to-vote/:step               controllers.RegisterToVoteController.validateStep(step: String)
GET         /register-to-vote/edit/:step          controllers.RegisterToVoteController.edit(step: String)
POST        /register-to-vote/edit/:step          controllers.RegisterToVoteController.validateEdit(step: String)


#Postcode Lookup
GET         /address/:postcode                    controllers.PostcodeController.lookup(postcode)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/template/*file                controllers.Template.at(path="/assets/govuk_template_play/assets", file)
GET         /assets/toolkit/*file                 controllers.GovukToolkit.at(path="/assets/govuk_frontend_toolkit", file)
GET         /assets/*file                         controllers.Assets.at(path="/public", file)
