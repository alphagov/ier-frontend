# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                                                  controllers.RegisterToVoteController.index
GET         /register-to-vote                                  controllers.RegisterToVoteController.registerToVote

#Complete Route
GET         /register-to-vote/complete                         controllers.CompleteController.complete
GET         /register-to-vote/complete/fake                    controllers.CompleteController.fakeComplete


#Exit Routes
GET         /register-to-vote/exit/scotland                    controllers.ExitController.scotland
GET         /register-to-vote/exit/northern-ireland            controllers.ExitController.northernIreland
GET         /register-to-vote/exit/under-18                    controllers.ExitController.under18
GET         /register-to-vote/exit/dont-know                   controllers.ExitController.dontKnow
GET         /register-to-vote/exit/too-young                   controllers.ExitController.tooYoung
GET         /register-to-vote/exit/no-franchise                controllers.ExitController.noFranchise

#Error Routes
GET         /register-to-vote/error/timeout                    controllers.ErrorController.timeout


##Initial Branching routes

#Country Step
GET         /register-to-vote/country-of-residence             controllers.step.CountryController.get
POST        /register-to-vote/country-of-residence             controllers.step.CountryController.post



##Ordinary Voter routes

#Confirmation Step
GET         /register-to-vote/confirmation                     controllers.step.ordinary.ConfirmationController.get
POST        /register-to-vote/confirmation                     controllers.step.ordinary.ConfirmationController.post

#Contact Step
GET         /register-to-vote/contact                          controllers.step.ordinary.ContactController.get
POST        /register-to-vote/contact                          controllers.step.ordinary.ContactController.post

#Postal Vote Step
GET         /register-to-vote/postal-vote                      controllers.step.ordinary.PostalVoteController.get
POST        /register-to-vote/postal-vote                      controllers.step.ordinary.PostalVoteController.post

#Open Register Step
GET         /register-to-vote/open-register                    controllers.step.ordinary.OpenRegisterController.get
POST        /register-to-vote/open-register                    controllers.step.ordinary.OpenRegisterController.post

#Other Address Step
GET         /register-to-vote/other-address                    controllers.step.ordinary.OtherAddressController.get
POST        /register-to-vote/other-address                    controllers.step.ordinary.OtherAddressController.post

#Nationality Step
GET         /register-to-vote/nationality                      controllers.step.ordinary.NationalityController.get
POST        /register-to-vote/nationality                      controllers.step.ordinary.NationalityController.post

#Address Step
GET         /register-to-vote/address                          controllers.step.ordinary.AddressController.get
POST        /register-to-vote/address                          controllers.step.ordinary.AddressController.post
POST        /register-to-vote/address/lookup                   controllers.step.ordinary.AddressController.lookup

#Previous Address Step
GET         /register-to-vote/previous-address                 controllers.step.ordinary.PreviousAddressController.get
POST        /register-to-vote/previous-address                 controllers.step.ordinary.PreviousAddressController.post

#Name Step
GET         /register-to-vote/name                             controllers.step.ordinary.NameController.get
POST        /register-to-vote/name                             controllers.step.ordinary.NameController.post

#Date Of Birth Step
GET         /register-to-vote/date-of-birth                    controllers.step.ordinary.DateOfBirthController.get
POST        /register-to-vote/date-of-birth                    controllers.step.ordinary.DateOfBirthController.post
       
#Nino Step
GET         /register-to-vote/nino                             controllers.step.ordinary.NinoController.get
POST        /register-to-vote/nino                             controllers.step.ordinary.NinoController.post

#Postcode Lookup
GET         /address/:postcode                                 controllers.PostcodeController.lookupAddress(postcode)
GET         /authority/:postcode                               controllers.PostcodeController.lookupAuthority(postcode)


# Map static resources from the /public folder to the /assets URL path
GET         /assets/template/*file                             controllers.Template.at(path="/app/assets/govuk_template_play/assets", file)
GET         /assets/toolkit/*file                              controllers.GovukToolkit.at(path="/app/assets/govuk_frontend_toolkit", file)
GET         /assets/*file                                      controllers.Assets.at(path="/public", file)


# Status route
GET         /status                                            controllers.StatusController.status
