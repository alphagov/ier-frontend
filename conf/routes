# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                                      controllers.RegisterToVoteController.index
GET         /register-to-vote                      controllers.RegisterToVoteController.registerToVote
GET         /register-to-vote/                     controllers.RegisterToVoteController.registerToVote
GET         /register-to-vote/complete             controllers.RegisterToVoteController.complete
GET         /register-to-vote/complete/fake        controllers.RegisterToVoteController.fakeComplete
GET         /register-to-vote/confirmation         controllers.RegisterToVoteController.confirmApplication
POST        /register-to-vote/confirmation         controllers.RegisterToVoteController.submitApplication
GET         /register-to-vote/error                controllers.RegisterToVoteController.error
GET         /register-to-vote/error/:error         controllers.RegisterToVoteController.errorRedirect(error: String)


##Steps routes

#Name Step
GET         /register-to-vote/name                 controllers.step.NameController.get
POST        /register-to-vote/name                 controllers.step.NameController.post
GET         /register-to-vote/edit/name            controllers.step.NameController.editGet
POST        /register-to-vote/edit/name            controllers.step.NameController.editPost


##Old steps routes
GET         /register-to-vote/:step                controllers.RegisterToVoteController.registerStep(step: String)
POST        /register-to-vote/:step                controllers.RegisterToVoteController.validateStep(step: String)
GET         /register-to-vote/edit/:step           controllers.RegisterToVoteController.edit(step: String)
POST        /register-to-vote/edit/:step           controllers.RegisterToVoteController.validateEdit(step: String)


#Postcode Lookup
GET         /address/:postcode                     controllers.PostcodeController.lookupAddress(postcode)
GET         /authority/:postcode                   controllers.PostcodeController.lookupAuthority(postcode)


# Map static resources from the /public folder to the /assets URL path
GET         /assets/template/*file                 controllers.Template.at(path="/app/assets/govuk_template_play/assets", file)
GET         /assets/toolkit/*file                  controllers.GovukToolkit.at(path="/app/assets/govuk_frontend_toolkit", file)
GET         /assets/*file                          controllers.Assets.at(path="/public", file)


# Status route
GET         /status                                controllers.StatusController.status
