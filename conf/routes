##Old steps routes
GET         /register-to-vote/:step                  controllers.RegisterToVoteController.registerStep(step: String)
POST        /register-to-vote/:step                  controllers.RegisterToVoteController.validateStep(step: String)
GET         /register-to-vote/edit/:step             controllers.RegisterToVoteController.edit(step: String)
POST        /register-to-vote/edit/:step             controllers.RegisterToVoteController.validateEdit(step: String)


#Postcode Lookup
GET         /address/:postcode                       controllers.PostcodeController.lookupAddress(postcode)
GET         /authority/:postcode                     controllers.PostcodeController.lookupAuthority(postcode)


# Map static resources from the /public folder to t  he /assets URL path
GET         /assets/template/*file                   controllers.Template.at(path="/app/assets/govuk_template_play/assets", file)
GET         /assets/toolkit/*file                    controllers.GovukToolkit.at(path="/app/assets/govuk_frontend_toolkit", file)
GET         /assets/*file                            controllers.Assets.at(path="/public", file)


# Status route
GET         /status                                  controllers.StatusController.status
